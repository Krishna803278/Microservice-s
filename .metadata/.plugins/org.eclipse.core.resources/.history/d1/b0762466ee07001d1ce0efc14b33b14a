server:
  port: 1111
 
spring:
  application:
    name: API-GATEWAY
  cloud:
    gateway:
      routes:
      - id: STUDENT-SERVICE 
        uri: lb://STUDENT-SERVICE 
        predicates:
        - Path = /api/teacher/**
      - id: TEACHER-SERVICE 
        uri: lb://TEACHER-SERVICE
        predicates:  
        - Path = /api/teacher/**
        
  main:
    web-application-type: reactive
eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
     defaultZone: http://localhost:8761/eureka/
     instance:
     hostname: localhost      